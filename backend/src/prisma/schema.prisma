datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  password String
  name  String?
  tenantId Int?
  tenant   Tenant? @relation(fields: [tenantId], references: [id])
}

model Tenant {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}
